<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:minHeight="100dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/colorSurface">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sri_lanka_main"
            app:civ_border_width="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:civ_border_color="@color/colorBackground"/>

        <TextView
            android:id="@+id/card_title_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="70dp"
            android:text="Card_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/card_secondary_title_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="30dp"
            android:text="Secondary Title"
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Historical"
            android:textAppearance="@style/chipTextappearance"
            android:textStyle="bold|italic"
            app:chipBackgroundColor="@color/colorSecondary" />

    </FrameLayout>


</com.google.android.material.card.MaterialCardView>