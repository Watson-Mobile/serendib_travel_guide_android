<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.places.DetailedDestination">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray">

            <ImageView
                android:id="@+id/image_detailed"
                android:layout_width="match_parent"
                android:src="@drawable/sri_lanka_main"
                android:layout_height="@dimen/img_card" />

            <TextView
                android:id="@+id/title_detailed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shrine_toolbar_collapsed_height"
                android:layout_marginTop="200dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="left"
                android:lines="1"
                android:padding="@dimen/padding_small_card"
                android:text="@string/demo_card_text"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_detailed" />

            <TextView
                android:id="@+id/txt_detailed_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/demo_card_para"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/title_detailed" />
        </FrameLayout>


    </RelativeLayout>
</ScrollView>
