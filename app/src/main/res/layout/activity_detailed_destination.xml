    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:context=".ui.places.DetailedDestination">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:titleTextColor="@color/colorOnPrimary" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_detailed" />

    <FrameLayout
        android:id="@+id/frame_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:paddingTop="@dimen/shrine_toolbar_collapsed_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_toolbar">


        <ImageView
            android:id="@+id/image_detailed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_card"
            android:src="@drawable/sri_lanka_main" />

        <TextView
            android:id="@+id/title_detailed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shrine_toolbar_collapsed_height"
            android:layout_marginTop="200dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="left"
            android:lines="1"
            android:padding="@dimen/padding_small_card"
            android:text="@string/demo_card_text"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_detailed" />

        <TextView
            android:id="@+id/txt_detailed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="@dimen/no_space"
            android:text="@string/demo_card_para"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/title_detailed" />

        <TextView
            android:id="@+id/txt_link_guides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="350dp"
            android:clickable="true"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="find a guide"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/txt_detailed_description" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



