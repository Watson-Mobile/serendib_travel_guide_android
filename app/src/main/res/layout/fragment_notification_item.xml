<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:minHeight="50dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorBackground"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/place_image_notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/sri_lanka_main"
            app:civ_border_color="@color/colorOnError"
            app:civ_border_width="4dp" />

        <TextView
            android:id="@+id/card_notification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="8dp"
            android:text="Secondary Title"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/card_notification_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text="place"
            android:textSize="12sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/card_notification_place_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text="type"
            android:textSize="12sp"
            android:textStyle="italic" />

        
        <ImageButton
            android:id="@+id/notification_accept_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_done"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorOnError" >

        </ImageButton>


        <!--        <com.google.android.material.chip.Chip-->
        <!--            android:id="@+id/item_chip_tag"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="260dp"-->
        <!--            android:layout_marginTop="50dp"-->
        <!--            android:layout_marginRight="10dp"-->
        <!--            android:layout_marginBottom="10dp"-->
        <!--            android:text="Historical"-->
        <!--            android:textAppearance="@style/chipTextappearance"-->
        <!--            android:textStyle="bold|italic"-->
        <!--            app:chipBackgroundColor="@color/colorSecondary" />-->

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
